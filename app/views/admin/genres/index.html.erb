<div class ="container mb-5">
  <div class ="row">
    <h1 class ="col-12 text-center mt-5">Genre List</h1>
    <div class ="col-12 text-center mt-2">
    <%= form_with model:@genre,url: admin_genres_path(@genre),method: :post,local:true do |f| %>
      <%= f.text_field :name, autofocus: true %>
      <%= f.submit "send" %>
    <% end %>
    <table class ="admin_table col-12 text-center mt-5",style="width:100%;">
      <thead>
        <th class ="admin_th">genre name</th>
      </thead>
      <tbody>
      <% @genres.each do |genre| %>
        <tr>
         <td class ="admin_td"><%= genre.name %><br>
         <%= link_to "Edit",edit_admin_genre_path(genre),class:"btn btn-sm btn-success" %>&nbsp;&nbsp;
         <%= link_to "Destroy",admin_genre_path(genre),method: :delete,data: { confirm: 'Do you really want to delete this?' },class: 'btn  btn-sm btn-danger' %>
        </tr>
      <% end %>
      </tbody>
    </table>  
    <%= paginate @genres %>
    </div>
  </div>
</div>
