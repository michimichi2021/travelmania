<h1>ジャンル一覧</h1>
<%= form_with model:@genre,url: admin_genres_path(@genre),method: :post,local:true do |f| %>
  <%= f.text_field :name, autofocus: true %>
  <%= f.submit "ジャンル名追加" %>
<% end %>
<table>
  <thead>
    <th>ジャンル名</th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
   <% @genres.each do |genre| %>
   <tr>
     <td><%= genre.name %></td>
     <td><%= link_to "編集する",edit_admin_genre_path(genre) %></td>
     <td><%= link_to "削除する",admin_genre_path(genre),method: :delete,data: { confirm: '本当に消しますか？' },class: 'btn btn-danger' %></td>
   </tr>
   <% end %>
  </tbody>
</table>

