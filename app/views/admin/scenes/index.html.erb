<div class ="container mb-5">
  <div class ="row">
    <h1 class ="col-12 text-center mt-5">Scene List</h1>
    <div class ="col-12 text-center mt-2">
    <%= form_with model:@scene,url: admin_scenes_path(@scene),method: :post,local:true do |f| %>
      <%= f.text_field :name, autofocus: true %>
      <%= f.submit "send" %>
    <% end %>
    <table class ="admin_table col-12 text-center mt-5">
      <thead>
        <th>scene name</th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
      <% @scenes.each do |scene| %>
        <tr>
         <td><%= scene.name %>
         <td><%= link_to "Edit",edit_admin_scene_path(scene),class:"btn btn-sm btn-success" %></td>
         <td><%= link_to "Destroy",admin_scene_path(scene),method: :delete,data: { confirm: 'Do you really want to delete this?' },class: 'btn btn-sm btn-danger' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>  
    </div>
  </div>
</div>
