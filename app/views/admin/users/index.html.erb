<div class ="container mb-5">
  <div class ="row">
    <h1 class ="col-12 text-center mt-5 mb-5">User List</h1>
    <div class ="col-12 text-center mt-2">
    <table class ="admin_table admin_user_table col-12 m-auto">
      <tr class ="thead">
        <th>name</th>
        <th>email</th>
        <th>status</th>
      </tr>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
        <% if user.is_deleted == false %>
          valid
        <% else %>
          Withdrawal
        <% end %>
        </td>
        <td style="color:white;"><%= link_to "Edit",edit_admin_user_path(user),class:"btn btn-sm btn-success" %></td>
      </tr>
      <% end %>
    </table>  
    </div>
  </div>
</div>
