<header>
  
  <nav>
    <div class="drawer">
      <h4><%= link_to "TravelMania",root_path,class: 'site_logo' %></h4>
    </div>
  <div class="menu">
  <ul> 
  <% if user_signed_in? %>
    <li>
      <%= link_to "search_locaton",root_path %>
    </li>
    <li>
      <%= link_to "logout", destroy_user_session_path, method: :delete %>
    </li>
    <li>
      <%= link_to "mypage", user_path(id: current_user) %>
    </li>
    <li>
      <%= link_to "message", chats_path %>
    </li>
    <% if current_user.passive_notifications.where(checked: false).any? %>
      <i class="fa fa-circle" style="color: gold;"></i>
    <% end %>
    <li>
      <%= link_to "notice", notifications_path, class: "btn-default" %>
    </li>
  <% elsif admin_signed_in? %>
    <li>
      <%= link_to "logout", destroy_admin_session_path, method: :delete %>
    </li>
    <li>
      <%= link_to "area", admin_areas_path %>
    </li>
    <li>
      <%= link_to "genre", admin_genres_path %>
    </li>
    <li>
      <%= link_to "scene", admin_scenes_path %>
    </li>
    <li>
      <%= link_to "customer", admin_users_path %>
    </li>
  <% else %>
    <li>
      <%= link_to "search_location",root_path %>
    </li>
    <li>
      <%= link_to "signup",  new_user_registration_path %>
    </li>
    <li>
      <%= link_to "login", new_user_session_path %>
    </li>
  <% end %>
  
  </ul>
  </div>
  </nav>
  
</header>