<% comments.each do |comment| %>
  <%= link_to user_path(comment.user) do %>
  <%= image_tag comment.user.image.variant(resize:'50x50'),class: "post_show_user_icon mt-2" %> 
  <% end %>
  <%= comment.user.name %>&nbsp;&nbsp;
  <%= comment.created_at.strftime('%Y/%m/%d') %>
  <% if comment.user == current_user %>
    <%= link_to post_comment_path(comment.post, comment), method: :delete, remote:true do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  <% end %><br>
  <div class ="introduction comment_introduction"><%= comment.comment %></div><br>
<% end %>