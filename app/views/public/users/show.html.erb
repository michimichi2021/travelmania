<h1>マイページ</h1>
<% if @user.image.attached? %>
<%= image_tag @user.image.variant(resize:'300x300') %>
<% end %>
<div><%= @user.name %></div>
<div><%= @user.introduction %></div>

<div>
  <% if @user.id == current_user.id %> 
  <%= link_to "ユーザー編集画面へ",edit_user_path(@user) %>
  <% end %>
</div>

<%= link_to new_post_path do %>
<i class="fas fa-camera-retro"></i>
<% end %>

<% if current_user != @user %>
　<% if current_user.following?(@user) %>
 　<%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete, class: "btn btn-default" %>
   　<% if @user.following?(current_user) %>
   　  <%= link_to 'Begin Chat', chat_path(@user.id) %>
   　<% end %>
  <% else %>
 　<%= link_to 'フォローする', user_relationships_path(@user.id), method: :post , class: "btn btn-primary"%>
  <% end %>
<% end %>
 

 

<div>
  <h1>投稿一覧</h1>
  <% @posts.each do |post| %>
    <li>
    <%= link_to post_path(post) do %>
      <% if post.image.attached? %>
      <%= image_tag post.image.variant(resize:'300x300') %> 
      <% end %>
    <% end %>
    </li>
  <% end %>
</div>